<%= form_with(model: administrator, class: "contents") do |form| %>
  <% if administrator.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(administrator.errors.count, "error") %> prohibited this administrator from being saved:</h2>

      <ul class="list-disc ml-6">
        <% administrator.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: [
      "block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full",
      administrator.errors[:name].any? ? "border-red-400 focus:outline-red-600" : "border-gray-400 focus:outline-blue-600"
    ] %>
  </div>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: [
      "block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full",
      administrator.errors[:email].any? ? "border-red-400 focus:outline-red-600" : "border-gray-400 focus:outline-blue-600"
    ] %>
  </div>

  <div class="my-5">
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "new-password", class: [
      "block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full",
      administrator.errors[:password].any? ? "border-red-400 focus:outline-red-600" : "border-gray-400 focus:outline-blue-600"
    ] %>
  </div>

  <div class="my-5">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: [
      "block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full",
      administrator.errors[:password_confirmation].any? ? "border-red-400 focus:outline-red-600" : "border-gray-400 focus:outline-blue-600"
    ] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>